                            <span class="info-box-text">Nombres des signalé</span>
                            {% for sumr in sumrep %}
                                <span class="info-box-number">{{ sumr.sumrep }}</span>
                            {% endfor %}
                        </div>
                        <!-- /.info-box-content -->
