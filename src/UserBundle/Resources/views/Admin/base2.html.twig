                        <div class="info-box-content">
                            <span class="info-box-text">Activité</span>
                            {% for act in act %}
                                <span class="info-box-number">{{ act.acts }}</span>
                            {% endfor %}
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
